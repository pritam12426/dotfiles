# https://www.gnu.org/software/wget/manual/html_node/Sample-Wgetrc.html
# https://www.gnu.org/software/wget/manual/html_node/Wgetrc-Commands.html

# Patience isn't always a virtue
read_timeout = 60
dns_timeout = 30

timeout = 60
tries = 3

# Hide the fact we're using wget(1) instead of a browser
referer = http://www.google.com
user-agent = Mozilla/5.0 (Macintosh; Intel Mac OS X 10.15; rv:146.0) Gecko/20100101 Firefox/146.0
header = Accept: text/xml,application/xml,application/xhtml+xml,text/html;q=0.9,text/plain;q=0.8,image/png,*/*;q=0.5
header = Accept-Language: en-AU,en;q=0.9,en-GB;q=0.8
header = Accept-Encoding: gzip,deflate
header = Accept-Charset: ISO-8859-1,utf-8;q=0.7,*;q=0.7
header = Keep-Alive: 300

# Echo the server's response
#server-response = on

# Fix missing HTML and CSS file-extensions
adjust-extension = on

# If set to on, force continuation of preexistent partially retrieved files.
continue = on

# When set to off, disallow cookies.
cookies = on

# Follow FTP links from HTML documents.
follow_ftp = on

# https://gist.github.com/hackerb9/d382e09683a52dcac492ebcdaf1b79af
# Load cookies from file.
#load_cookies = ~/.cache/firefox_cookies.txt

# Save any new cookies back to the same file
save_cookies = ~/.cache/wget_cookies.txt
keep_session_cookies = on
