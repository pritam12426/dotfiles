<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>local.app.readeck</string>

		<key>ProgramArguments</key>
		<array>
			<string>/Users/pritam/.local/github-releases-binary/readeck</string>
			<string>serve</string>
			<string>-config</string>
			<string>/Users/pritam/.config/readeck/config.toml</string>
			<string>-port</string>
			<string>8872</string>
		</array>

		<!-- Run the service in the background -->
		<key>RunAtLoad</key>
		<true/>
		<!-- Keep the service alive -->
		<key>KeepAlive</key>
		<true/>

		<!-- Standard output and error logs -->
		<key>StandardOutPath</key>
		<string>/tmp/local.app.readeck/readeck_stdout.log</string>
		<key>StandardErrorPath</key>
		<string>/tmp/local.app.readeck/readeck_stderr.log</string>

		<key>ServiceDescription</key>
		<string>Readeck Bookmarking Service</string>
	</dict>
</plist>
