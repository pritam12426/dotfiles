# ==========================================================
#  Homebrew Configuration â€” Fast, Binary-Only, No-Surprises
# ==========================================================
# This file is loaded automatically by Homebrew.
# Only use KEY=value pairs â€” no `export`, no $HOME, no $(cmd)
# ==========================================================


# -------------------------------
# âš¡ Performance
# -------------------------------

# Use 4 parallel jobs when building is unavoidable
HOMEBREW_MAKE_JOBS=4

# Never compile from source if a bottle is missing â€” abort instead
HOMEBREW_NO_BOTTLE_SOURCE_FALLBACK=true

# Skip auto-update before every command (you update manually)
HOMEBREW_NO_AUTO_UPDATE=true

# Use the JSON API instead of full git repos (much faster)
HOMEBREW_INSTALL_FROM_API=true

# Fetch only git tags instead of the entire history
HOMEBREW_UPDATE_TO_TAG=true


# -------------------------------
# ðŸ§¹ Cache & Cleanup Control
# -------------------------------

# Keep downloaded bottles forever
HOMEBREW_KEEP_BOTTLES=true

# Never remove old formulae or cached files
HOMEBREW_NO_CLEANUP_FORMULAE=1


# -------------------------------
# ðŸ“¦ Bottle Behaviour
# -------------------------------

# Allow relocatable bottles built on newer macOS versions
HOMEBREW_ACCEPT_BOTTLE_RELOCATABILITY=true


# -------------------------------
# ðŸ”• Noise & Telemetry
# -------------------------------

# Disable all analytics
HOMEBREW_NO_ANALYTICS=true

# Ask before destructive operations
HOMEBREW_ASK=true

# Show how long each install took
HOMEBREW_DISPLAY_INSTALL_TIMES=true

# Uncomment if you want *zero* environment hint spam
# HOMEBREW_NO_ENV_HINTS=true

# Uncomment if redirect warnings annoy you
# HOMEBREW_NO_INSECURE_REDIRECT=true


# -------------------------------
# ðŸ›‘ Deprecated / Legacy
# -------------------------------
# Still supported for older Homebrew versions
HOMEBREW_NO_INSTALL_CLEANUP=true
